{% extends '@SyliusAdmin/Email/layout.html.twig' %}

{% block subject %}
    {{ 'sylius.email.shipment_confirmation.subject'|trans({}, null, localeCode) }}
{% endblock %}

{% block content %}

    <tr>
        <td align="center" style="font-size:0px;padding:10px 25px;word-break:break-word;">
            <div style="font-family:Ubuntu, Helvetica, Arial, sans-serif;font-size:20px;line-height:1;text-align:center;color:#000000;">
            {{ 'sylius.email.shipment_confirmation.your_order_with_number'|trans({}, null, localeCode) }} <b>{{ order.number }}</b> {{ 'sylius.email.shipment_confirmation.has_been_sent_using'|trans({}, null, localeCode) }} <b>{{ shipment.method }}</b>
            </div>
        </td>
    </tr>
    {% if shipment.tracking is not null %}
        <tr>
            <td align="center" style="font-size:0px;padding:10px 25px;word-break:break-word;">
                <div style="font-family:Ubuntu, Helvetica, Arial, sans-serif;font-size:20px;line-height:1;text-align:center;color:#000000;">
                    {% set tracking_code %}<b>{{ shipment.tracking }}</b>{% endset %}
                    {{ 'sylius.email.shipment_confirmation.you_can_check_its_location_with_the_tracking_code'|trans({
                        '%tracking_code%': tracking_code
                    }, null, localeCode)|raw }}
                </div>
            </td>
        </tr>
    {% endif %}

    <tr>
        <td align="center" style="font-size:0px;padding:10px 25px;word-break:break-word;">
            <div style="font-family:Ubuntu, Helvetica, Arial, sans-serif;font-size:15px;line-height:1;text-align:center;color:#000000;">{{ 'sylius.email.shipment_confirmation.thank_you_for_transaction'|trans({}, null, localeCode) }}</div>
        </td>
    </tr>

