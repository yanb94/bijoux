{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

{% if cart.empty %}
    {{ 'sylius.ui.your_cart_is_empty'|trans }}.
{% else %}
    <div class="ui list">
        {% for item in cart.items %}
            <div class="item-product">{{ item.quantity }} x <strong>{{ item.product }}</strong> : {{ money.convertAndFormat(item.unitPrice) }}</div>
        {% endfor %}
        <div class="total"><strong>{{ 'sylius.ui.subtotal'|trans }}</strong><br> {{ money.convertAndFormat(cart.itemsTotal) }}</div>
    </div>
    <a href="{{ path('sylius_shop_cart_summary') }}" class="btn-primary btn-cart">{{ 'sylius.ui.view_and_edit_cart'|trans }}</a>
    <div class="ui divider"></div>
    <a href="{{ path('sylius_shop_checkout_start') }}" class="btn-secondary btn-cart">{{ 'sylius.ui.checkout'|trans }}</a>
{% endif %}
