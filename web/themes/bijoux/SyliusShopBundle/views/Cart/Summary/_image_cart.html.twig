{% if product.imagesByType('thumbnail') is not empty %}
    {% set path = product.imagesByType('thumbnail').first.path|imagine_filter(filter|default('product_block_image')) %}
{% elseif product.images.first %}
    {% set path = product.images.first.path|imagine_filter(filter|default('product_block_image')) %}
{% else %}
    {% set path = '//placehold.it/200x200' %}
{% endif %}

<img src="{{ path }}" {{ sylius_test_html_attribute('main-image') }} alt="{{ product.name }}" class="" />